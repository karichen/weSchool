.main {
    width: 100%;
    height: 100%;
    position: relative;
}

.background {
    background-color: #8FC8BA;
}

.item-regulation {
    width: 45%;
}

.swiper-box {
    display: block;
    width: 100%;
    overflow: hidden;
}

.videoController {
    width: 100%;
}

.barrage-box {
    margin-top: 20rpx;
    width: 92%;
    left: 4%;
    position: relative;
    background-color: #fff;
    height: 80rpx;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
}

.barrage-input {
    width: 71%;
    height: 80rpx;
    margin-left: 2%;
    float: left;
}

.barrage-btn {
    margin-top: 2rpx;
    margin-left: 8rpx;
    top: 6rpx;
    float: left;
}


/* 返回顶部 */

.goTop {
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    position: fixed;
    bottom: 120rpx;
    right: 30rpx;
    z-index: 999;
    background: rgba(0, 0, 0, .3);
    color: #fff;
    border-radius: 50%;
}