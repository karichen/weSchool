page {
    background-color: #fff;
}

.top-box {
    width: 100%;
    position: relative;
    height: 300rpx;
    background-color: #8FC8BA;
}

.top-box-title {
    font-size: 4em;
    font-weight: 700;
    color: #fff;
    position: relative;
    top: 5rpx;
    left: 40rpx;
}

.top-box-score {
    margin-left: 150rpx;
}

.top-box-explain-1 {
    color: #fff;
    font-size: 26rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.top-box-explain-2 {
    color: #fff;
    font-size: 40rpx;
    font-weight: 700;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.top-box-title-icon {
    font-size: 1em;
    color: #fff;
    position: relative;
    margin-left: 10rpx;
}

.main {
    position: relative;
    width: 100%;
    /* border-top-left-radius: 35rpx; */
    /* border-top-right-radius: 35rpx; */
    background-color: #fff;
}

.detail {
    position: relative;
    top: 0rpx;
    width: 100%;
}

.detail-item {
    width: 100%;
    height: 85rpx;
    color: #798395;
    font-weight: 700;
    display: flex;
    flex-direction: row;
    background-color: #e4f4ff;
}

.detail-text {
    flex: 4;
    font-size: 40rpx;
    align-content: center;
    text-align: center;
    line-height: 90rpx;
}

.detail-icon {
    flex: 1;
    line-height: 90rpx;
}

.analysis {
    width: 100%;
    min-height: 120rpx;
}

.analysis-image-top {
    min-height: 30rpx;
    margin-top: 20rpx;
}

.analysis-image-footer {
    min-height: 30rpx;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
}

.analysis-top-name {
    width: 100%;
    font-size: 40rpx;
    font-weight: 700;
    margin-bottom: 25rpx;
}

.analysis-option {
    font-size: 30rpx;
}

.analysis-footer-name {
    width: 100%;
    text-align: center;
    font-size: 40rpx;
    font-weight: 700;
    color: #8FC8BA;
}

.analysis-image-footer {
    width: 96%;
    position: relative;
    left: 2%;
}

.red {
    color: red;
}